5 CPUSPEED 99
10 X=1:MVF=0.25:Y=2:YF=0.1
15 Y=Y+RND(16)
100 SCREEN 14:PALETTE 1
110 RECT 0,0,319,239,63,-1
120 LOAD IMAGE "TESTSPRITE2.PNG" AS SPRITE 0
122 LOAD IMAGE "TESTSPRITE2.PNG" AS SPRITE 1
124 LOAD IMAGE "TESTSPRITE2.PNG" AS SPRITE 2
125 LOAD IMAGE "TESTSPRITE2.PNG" AS SPRITE 3
130 SPRITE 0 SIZE 32,32 ON
135 SPRITE 1 SIZE 32,32 ON
137 SPRITE 2 SIZE 32,32 ON
139 SPRITE 3 SIZE 32,32 ON
198 REM * * * * * * * * * *
199 REM LET'S MOVE A SPRITE
200 WHILE INKEY$=""
220   IF X<1 OR X>254 THEN MVF=-MVF
230   IF Y<2 OR Y>174 THEN YF=-YF
240   X=X+MVF
245   Y=Y+YF
246   IF X<1 THEN X=1
247   '* * LINE 248 WILL KEEP THE SPRITES HOVERING NEAR THE LEFT MARGIN FOR A MOMENT. IT IS A COOL EFFECT.
248   IF X<1 THEN X=1
249   '* * FIDDLE WITH THESE VALUES TO CHANGE MOVEMENT ON X/Y AXIS
250   MVF=MVF+0.05:YF=YF+0.01
255   IF MVF>8 THEN MVF=0.25
260   IF YF>4 THEN YF=0.1
270   MOVE SPRITE 0 TO X,Y
275   MOVE SPRITE 1 TO X,Y+32
280   MOVE SPRITE 2 TO X+32,Y
285   MOVE SPRITE 3 TO X+32,Y+32
390   VSYNC
400 WEND
